@page "/Picture"

<AuthorizeView>
    <Authorized>
        
            @foreach (var claim in context.User.Claims)
            {
                if (claim.Type == "picture")
                {
            <img style="border-radius: 50%; margin: 5px;" src="@claim.Value" alt="profile picture" width="32" height="32">
                }
            }
        
    </Authorized>
</AuthorizeView>

